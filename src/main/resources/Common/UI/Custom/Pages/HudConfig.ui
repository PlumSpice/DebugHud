$C = "../Common.ui";

Group {
    Anchor: (Width: 580, Height: 350);
    Background: #141c26(0.98);
    LayoutMode: Top;
    Padding: (Full: 20);

    Label {
        Text: "DebugHud Config";
        Anchor: (Height: 45);
        Style: (
            FontSize: 26,
            TextColor: #ffffff,
            HorizontalAlignment: Center,
            RenderBold: true
        );
      }

    Group {
        Anchor: (Height: 1);
        Background: #2b3542;
    }

    Group { Anchor: (Height: 16); }

    Group {
        LayoutMode: Left;
        Anchor: (Height: 44);

        Label {
            Text: "Player Name";
            Anchor: (Width: 100);
            Style: (FontSize: 14, TextColor: #96a9be, VerticalAlignment: Center);
        }

        $C.@TextField #NameInput {
            FlexWeight: 1;
            PlaceholderText: "Enter name...";
        }
    }

    Group {
        LayoutMode: Center;
        Padding: (Left: 50);
        Anchor: (Height: 44);

        $C.@TextButton #SendButton {
            Text: "SEND";
            Anchor: (Width: 130, Height: 40);
        }

        Group { Anchor: (Width: 16); }

        $C.@CancelTextButton #CancelButton {
            Text: "CANCEL";
            Anchor: (Width: 130, Height: 40);
        }
    }
}