$C = "../Common.ui";

@PrimaryButtonStyle = TextButtonStyle(
  Default: (Background: #3a7bd5, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Hovered: (Background: #4a8be5, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
  Pressed: (Background: #2a6bc5, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center))
);

Group #mainHud {
  Anchor: (Left: 10, Top:10, Width: 440, Height: 160);
  Background: #141c26(0.02);
  LayoutMode: Top;
  Padding: (Full: 20);

  Group #showCoordinatesGroup {
      LayoutMode: Left;
      Anchor: (Left: 2, Top:0, Height: 20);
      Visible: true;

      Label {
        Text: "Position:";
        Anchor: (Width: 60, Height: 20);
        Style: (FontSize: 12, TextColor: #96a9be);
      }

      Label #PositionVal {
        Text: "";
        Anchor: (Width: 200, Height: 20);
        Style: (FontSize: 12, TextColor: #96a9be);
      }
    }

  Group #showPingGroup {
      LayoutMode: Left;
      Anchor: (Left: 2, Height: 20);
      Visible: true;

      Label {
        Text: "Ping:";
        Anchor: (Width: 40, Height: 20);
        Style: (FontSize: 12, TextColor: #96a9be);
      }

      Label #PingVal {
        Text: "";
        Anchor: (Width: 50, Height: 20);
        Style: (FontSize: 12, TextColor: #96a9be);
      }

      Label {
          Text: "|";
          Anchor: (Width: 10, Height: 20);
          Style: (FontSize: 12, TextColor: #96a9be);
        }

      Label {
          Text: "99th %ile:";
          Anchor: (Left: 5, Width: 65, Height: 20);
          Style: (FontSize: 12, TextColor: #96a9be);
        }

        Label #PingP99Val {
          Text: "";
          Anchor: (Width: 50, Height: 20);
          Style: (FontSize: 12, TextColor: #96a9be);
        }
    }

    Group #showWorldGroup {
        LayoutMode: Left;
        Anchor: (Left: 2, Height: 20);
        Visible: true;

        Label {
          Text: "World:";
          Anchor: (Width: 50, Height: 20);
          Style: (FontSize: 12, TextColor: #96a9be);
        }

        Label #WorldVal {
          Text: "";
          Anchor: (Width: 60, Height: 20);
          Style: (FontSize: 12, TextColor: #96a9be);
        }

        Label {
          Text: "|";
          Anchor: (Width: 10, Height: 20);
          Style: (FontSize: 12, TextColor: #96a9be);
        }

        Label {
          Text: "Biome:";
          Anchor: (Left: 5, Width: 50, Height: 20);
          Style: (FontSize: 12, TextColor: #96a9be);
        }

        Label #BiomeVal {
          Text: "";
          Anchor: (Width: 100, Height: 20);
          Style: (FontSize: 12, TextColor: #96a9be);
        }
      }

  Group #showGameTimeGroup {
    LayoutMode: Left;
    Anchor: (Left: 2, Height: 20);
    Visible: true;

    Label {
      Text: "Game Time: {";
      Anchor: (Width: 80, Height: 20);
      Style: (FontSize: 12, TextColor: #96a9be);
    }

    Label #TimeVal {
      Text: "";
      Anchor: (Width: 300, Height: 20);
      Style: (FontSize: 12, TextColor: #96a9be);
    }

    Label {
        Text: " }";
        Anchor: (Width: 10, Height: 20);
        Style: (FontSize: 12, TextColor: #96a9be);
      }
  }

  Group #showIRLTimeGroup {
    LayoutMode: Left;
    Anchor: (Left: 2, Height: 20);
    Visible: true;

    Label {
      Text: "IRL Time: ";
      Anchor: (Width: 60, Height: 20);
      Style: (FontSize: 12, TextColor: #96a9be);
    }

    Label #IRLTimeVal {
      Text: "";
      Anchor: (Width: 300, Height: 20);
      Style: (FontSize: 12, TextColor: #96a9be);
    }
  }

  Group #showSpeedGroup {
      LayoutMode: Left;
      Anchor: (Left: 2, Height: 20);
      Visible: true;

      Label {
        Text: "Speed:";
        Anchor: (Width: 45, Height: 20);
        Style: (FontSize: 12, TextColor: #96a9be);
      }

      Label #SpeedVal {
        Text: "";
        Anchor: (Width: 70, Height: 20);
        Style: (FontSize: 12, TextColor: #96a9be);
      }

      Label {
        Text: "|";
        Anchor: (Width: 10, Height: 20);
        Style: (FontSize: 12, TextColor: #96a9be);
      }

      Label #MovementStateVal {
        Text: "";
        Anchor: (Width: 300, Height: 20);
        Style: (FontSize: 12, TextColor: #96a9be);
      }
  }
}
